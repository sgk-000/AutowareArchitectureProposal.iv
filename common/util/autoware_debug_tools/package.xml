<?xml version="1.0"?>
<package format="3">
    <name>autoware_debug_tools</name>
    <version>0.1.0</version>
    <description>The autoware_debug_tools package</description>
    <maintainer email="kenji.miyake@tier4.jp">Kenji Miyake</maintainer>
    <license>Apache 2</license>

    <depend>geometry_msgs</depend>
    <depend>autoware_planning_msgs</depend>
    <depend>tf2_ros</depend>

    <!-- todo -->
  <buildtool_depend>ament_cmake</buildtool_depend>

    <exec_depend>rclpy</exec_depend>
    <exec_depend>launch_ros</exec_depend>
    <exec_depend condition="$ROS_PYTHON_VERSION == 2">python-rtree</exec_depend>
    <exec_depend condition="$ROS_PYTHON_VERSION == 3">python3-rtree</exec_depend>
    <test_depend>ament_copyright</test_depend>
    <test_depend>ament_flake8</test_depend>
    <test_depend>ament_pep257</test_depend>
    <test_depend>python3-pytest</test_depend>

    <export>
        <build_type>ament_cmake</build_type>
    </export>
</package>
